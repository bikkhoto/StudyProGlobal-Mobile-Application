# Study Pro Global - Environment Configuration
# Copy this file to .env and update with your values

# API Configuration
API_URL=https://api.studyproglobal.com
API_TIMEOUT=30000

# Encryption Keys (Change in production!)
ENCRYPTION_KEY=StudyProGlobal_SecureKey_2024
ENCRYPTION_SALT=StudyProGlobal_Salt_2024

# Environment
NODE_ENV=development

# Feature Flags
ENABLE_BIOMETRIC_AUTH=false
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_NOTIFICATIONS=false

# Application Configuration
APP_NAME=StudyProGlobal
APP_VERSION=1.0.0
APP_BUILD=1

# Security
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=6

# Storage
MAX_DOCUMENT_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Analytics (Optional)
ANALYTICS_ENABLED=false
ANALYTICS_KEY=

# Error Reporting (Optional)
SENTRY_DSN=
ERROR_REPORTING_ENABLED=false

# Third Party Services (Optional)
GOOGLE_MAPS_API_KEY=
FIREBASE_API_KEY=
FIREBASE_PROJECT_ID=

# Development Only
DEBUG_MODE=true
VERBOSE_LOGGING=true
